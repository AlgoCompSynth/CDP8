CC=cc
OPT = -g
CFLAGS= $(OPT) -Wall -mmacosx-version-min=10.8 -Dunix -I ../newinclude -I ../include
LIBDIR = ../../lib
LIBS = -lsfsysd -lcdp2kd -lpvxio2d

PROG=blur
BINS= main.o ap_blur.o blur.o
.c.o:
	$(CC) $(CFLAGS) -c $<
#
#	targets
#
all:	$(PROG)

$(PROG):	$(BINS)
	$(CC) $(CFLAGS) $(BINS) -o $(PROG) -L$(LIBDIR) $(LIBS)

clean:
	rm -f $(PROG)

veryclean:	clean
	rm -f *.o

install:	$(PROG)
	cp $(PROG) ../Release
